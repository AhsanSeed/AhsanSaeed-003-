<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="real-estate.list">
      <field name="name">real-estate list</field>
      <field name="model">real-estate.real-estate</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="real-estate.action_window">
      <field name="name">real-estate window</field>
      <field name="res_model">real-estate.real-estate</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="real-estate.action_server">
      <field name="name">real-estate server</field>
      <field name="model_id" ref="model_real-estate_real-estate"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="real-estate" id="real-estate.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="real-estate.menu_1" parent="real-estate.menu_root"/>
    <menuitem name="Menu 2" id="real-estate.menu_2" parent="real-estate.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="real-estate.menu_1_list" parent="real-estate.menu_1"
              action="real-estate.action_window"/>
    <menuitem name="Server to list" id="real-estate" parent="real-estate.menu_2"
              action="real-estate.action_server"/>

  </data>
</odoo>